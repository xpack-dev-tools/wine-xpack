{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.stablePeek": true,
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/*/**": true,
    "**/build/**": true
  },
  "markdownlint.config": {
    "MD041": false
  },
  "spellright.language": [
    "en_GB"
  ],
  "spellright.notificationClass": "warning",
  "cSpell.ignoreWords": [
    "Ionescu",
    "Liviu",
    "RPATH",
    "Somsubhra",
    "UCRT",
    "aarch",
    "aclocal",
    "armhf",
    "armv",
    "caffeinate",
    "ccmake",
    "cleanall",
    "cleanlibs",
    "cpack",
    "ctest",
    "dylib",
    "endraw",
    "ilegeul",
    "libexec",
    "libncurses",
    "liquidjs",
    "npmignore",
    "npmjs",
    "patchelf",
    "postversion",
    "readelf",
    "runpath",
    "wine",
    "wksi",
    "xbbla",
    "xbbli",
    "xbbma",
    "xbbmi",
    "xpack",
    "xpacks"
  ]
}
